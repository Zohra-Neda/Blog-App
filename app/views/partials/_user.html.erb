 <%= link_to user do%>
 <li class="user-card" >
    <div class="user-img">
        <img src=<%= user.photo%> width="100px" height="100px" class="user-photo">
    </div>
    <div class="user-info">
        <h2><%= user.name %></h2>
        <h2 class="post-counter">Number of posts: <%= user.posts_counter %></h2>
    </div>
 </li>
 <% end %>